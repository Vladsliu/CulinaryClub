@using CulinaryClub.ViewModel
@model UserDetailViewModel


    <section class="bg-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                        <div class="media-body">
                            <div class="mb-3">
                                <h1 class="h2 mb-2">@Model.UserName</h1>
                            </div>
                            <div>
                        <a><img src="@Model.ProfileImageUrl" width="100" height="100" alt="Img" style="display: inline-block;"></a>
                            </div>
                        <p class="text-muted">Dishes: @Model.Dishes</p>
                        <p class="text-muted">Rating: @Model.Rating</p>
                        <p class="text-muted">City: @Model.City</p>
                         <p class="text-muted">State: @Model.State</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

